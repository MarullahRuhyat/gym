version: '3.8'

services:
  app:
    build:
      context: .
      dockerfile: Dockerfile.prod
    volumes:
      - .:/app
    environment:
      DB_CONNECTION: mysql
      DB_HOST: db
      DB_PORT: 3306
      DB_DATABASE: gym
      DB_USERNAME: user_gym
      DB_PASSWORD: password_gym

  db:
    image: mysql:8.0.37
    ports:
      - "3307:3306"
    environment:
      MYSQL_DATABASE: gym
      MYSQL_USER: user_gym
      MYSQL_PASSWORD: password_gym
      MYSQL_ROOT_PASSWORD: root_password

  nginx:
    image: nginx:latest
    ports:
      - "8001:80"  # Port 8000 di-host akan memetakan ke port 80 di dalam kontainer Nginx
    depends_on:
      - app
    volumes:
      - ./docker/nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
    networks:
      - app-network

networks:
  app-network:
    driver: bridge
